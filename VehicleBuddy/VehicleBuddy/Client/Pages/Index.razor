@inject IVehicleClient _vehicleClient
@page "/"

<PageTitle>Index</PageTitle>

<h1>Hello, world!</h1>

<table>
    <thead>
        <tr>
            <th>Make</th>
            <th>Model</th>
            <th>Year</th>
            <th>Color</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var vehicle in allVehicles)
        {
            <tr>
                <td>@vehicle.Make.Name</td>
                <td>@vehicle.Model.Name</td>
                <td>@vehicle.Year</td>
                <td>@vehicle.Color</td>
            </tr>
        }
    </tbody>
</table>


@code {
    private List<VehicleResponse> allVehicles = new List<VehicleResponse>();

    protected async override Task OnInitializedAsync()
    {
        allVehicles = await _vehicleClient.GetAllAsync();
    }
}